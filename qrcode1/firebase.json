{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001,
      "host": "0.0.0.0"   
    },
    "firestore": {
      "port": 8080,
      "host": "0.0.0.0"   
    },
    "auth": {
      "port": 9099,
      "host": "0.0.0.0"   
    },
    "ui": {
      "enabled": true
    }
  },
  "hosting": {
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  }
}
